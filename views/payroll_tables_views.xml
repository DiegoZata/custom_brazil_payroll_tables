<odoo>
    <!-- Vistas para INSS Rates -->
    <record id="view_payroll_inss_rate_tree" model="ir.ui.view">
        <field name="name">payroll.inss.rate.tree</field>
        <field name="model">payroll.inss.rate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="range_min"/>
                <field name="range_max"/>
                <field name="rate"/>
            </tree>
        </field>
    </record>

    <record id="view_payroll_inss_rate_form" model="ir.ui.view">
        <field name="name">payroll.inss.rate.form</field>
        <field name="model">payroll.inss.rate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="range_min"/>
                        <field name="range_max"/>
                        <field name="rate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

